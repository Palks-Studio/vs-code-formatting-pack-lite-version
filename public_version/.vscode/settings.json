{
    // ==============================
    // GLOBAL EDITOR SETTINGS (LITE)
    // ==============================
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "on",
    "editor.formatOnSave": false,

    "files.eol": "\n",
    "files.encoding": "utf8",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    // ==============================
    // LANGUAGE-SPECIFIC (NEUTRAL)
    // No formatter, no automation
    // ==============================
    "[python]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": null,
        "editor.tabSize": 4
    },
    "[html]": {
        "editor.defaultFormatter": null,
        "editor.formatOnSave": false
    },
    "[css]": {
        "editor.defaultFormatter": null,
        "editor.formatOnSave": false
    },
    "[javascript]": {
        "editor.defaultFormatter": null,
        "editor.formatOnSave": false
    },
    "[json]": {
        "editor.defaultFormatter": null,
        "editor.formatOnSave": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },

    // ==============================
    // FILE TYPES
    // ==============================
    "files.associations": {
        "*.py": "python"
    }

    // ==============================
    // END OF FILE â€” LITE VERSION
    // ==============================
}
